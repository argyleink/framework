{
  "name": "famous-framework",
  "version": "0.8.0",
  "description": "A modern take on building reusable components and maintainable applications",
  "keywords": ["famous", "framework", "best", "architecture", "pattern"],
  "license": "MIT",
  "repository": "Famous/framework",
  "bugs": "https://github.com/Famous/framework/issues",
  "private": true,
  "authors": [
    "Zack Brown <zack@famo.us>",
    "Matthew Trost <matthew@famo.us>",
    "Arkady Pevzner <arkady@famo.us>",
    "Imtiaz Majeed <imtiaz@famo.us>",
    "Jordan Papaleo <jordan@famo.us>"
  ],
  "scripts": {
    "start-ecosystem": "./wait-then-sync.sh & cd server/ecosystem && nodemon server.js",
    "watch-components": "ECOSYSTEM_BASE_URI=http://localhost:8357/ local/assistant/bin/index.js watch --baseDir=$PWD/components/",
    "watch-runtime": "watchify browser/runtime/lib/index.js --standalone BEST -t [ envify --ECOSYSTEM_BASE_URI http://localhost:8357/ ] -o local/workspace/build/best.bundle.js --debug --verbose",
    "serve-build": "serve local/workspace/build -p 1337",
    "develop": "node local/workspace/livereload.js & npm run start-ecosystem & npm run watch-components & npm run watch-runtime & npm run serve-build",
    "sync-components": "ECOSYSTEM_BASE_URI=http://localhost:8357/ local/assistant/bin/index.js sync --baseDir=$PWD/components/",
    "test-runtime": "browserify browser/runtime/tests/**/*.spec.js -t [ envify --ECOSYSTEM_BASE_URI placeholder ] -d | tap-closer | smokestack | tap-spec",
    "test-state-manager": "browserify browser/state-manager/tests/*.spec.js | tap-closer | smokestack | tap-spec",
    "test-utilities": "browserify browser/utilities/tests/*.spec.js | tap-closer | smokestack | tap-spec",
    "test-ecosystem": "tape server/ecosystem/test/*.spec.js | tap-spec",
    "test-es": "tape server/ecosystem/lib/es/test/*.spec.js | tap-spec",
    "lint": "eslint --ignore-path .eslintignore ."
  },
  "dependencies": {
    "async": "^0.9.0",
    "aws-sdk": "^2.1.25",
    "babel": "^5.1.13",
    "body-parser": "^1.12.3",
    "chokidar": "^1.0.1",
    "clone": "^1.0.2",
    "coffee-script": "^1.9.2",
    "colors": "^1.1.0",
    "commander": "^2.8.1",
    "errorhandler": "^1.3.5",
    "escodegen": "^1.6.1",
    "esprima": "^2.2.0",
    "estraverse": "^4.1.0",
    "express": "^4.12.3",
    "famous": "https://github.com/Famous/engine.git#master",
    "fs-walk": "0.0.1",
    "jade": "^1.9.2",
    "jsdom": "^3.1.2",
    "less": "^2.5.0",
    "lodash": "^3.8.0",
    "merge-defaults": "^0.2.1",
    "mkdirp": "^0.5.0",
    "morgan": "^1.5.2",
    "mustache": "^1.1.0",
    "request": "^2.55.0",
    "stylus": "^0.51.1",
    "traverse": "^0.6.6",
    "xhr": "^2.0.1"
  },
  "devDependencies": {
    "babelify": "^5.0.3",
    "browser-sync": "^2.2.0",
    "browserify": "^10.1.3",
    "envify": "^3.4.0",
    "eslint": "^0.21.2",
    "jsdoc": "^3.3.0-beta1",
    "jshint": "^2.6.0",
    "livereload": "^0.3.7",
    "node-watch": "^0.3.4",
    "nodemon": "^1.3.7",
    "serve": "^1.4.0",
    "smokestack": "^3.2.2",
    "tap-closer": "^1.0.0",
    "tap-spec": "^3.0.0",
    "tape": "^4.0.0",
    "testling": "^1.7.1",
    "uglify-js": "^2.4.16",
    "watchify": "^3.2.1"
  }
}
